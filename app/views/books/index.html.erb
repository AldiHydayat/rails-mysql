	<%= flash[:notice] %> <br>
<% end %>

<% @books.each do |book| %>
	<%= book.title %> | <%= book.price %> | <%= book.pages %> | <%= link_to 'Show Detail', book_path(id: book.id)  %> | <%= link_to 'Edit', edit_book_path(id: book.id)  %> | <%= link_to 'Hapus', book_path(id: book.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	<br>
<% end %>

