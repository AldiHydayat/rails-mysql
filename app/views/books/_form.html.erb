<% if @book.errors.any? %>
	<% @book.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for @book, url: { controller: controller, action: action } do |f| %>
	<%= f.label :title %> <br>
	<%= f.text_field :title %> <br>

	<%= f.label :pages %> <br>
	<%= f.text_field :pages %> <br>

	<%= f.label :price %> <br>
	<%= f.text_field :price %> <br>

	<%= f.label :description %> <br>
	<%= f.text_area :description %> <br>

	<%= f.label :author_id %> <br>
	<%= f.text_field :author_id %>

	<%= f.submit 'Submit' %>

<% end %>